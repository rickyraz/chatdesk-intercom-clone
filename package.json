{
  "name": "chatdesk-intercom-clone",
  "module": "index.ts",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"bun --filter backend dev\" \"bun --filter frontend dev\"",
    "dev:backend": "bun --filter backend dev",
    "dev:frontend": "bun --filter frontend dev",
    "build": "bun --filter '*' build",
    "build:frontend": "bun --cwd frontend run build",
    "build:backend": "bun --cwd backend run build"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "effect": "^3.17.14"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  }
}